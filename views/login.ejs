<% layout("./layouts/boilerplate")%>

<body>
    <div class="row mt-3">
    <div class="col-6 offset-3">
       <h2>Sign up for wonderlust</h2> 
        <form action="http://localhost:3000/user/login" method="POST" class="needs-validation" novalidate>
            <div class="col-md-8">
                <label for="USERNAME" class="form-label">User name</label><br>
                <input type="text"  name ="username"class="form-control" id="USERNAME" required>
                <div class="invalid-feedback"> Username is required</div>
                <div class="valid-feedback"> Enter the user name</div><br><br>
            </div>


            <div class="col-md-8">
                <label for="password" class="form-label">Password</label><br>
                <input type="password"  name ="password"class="form-control" id="password" required>
                <div class="invalid-feedback"> Enter the password</div><br><br>
            </div>
            <button class=" btn btn-outline-success btn-sm" type="Submit" >Login</button>
        </form>
    </div>
</div>

</body>