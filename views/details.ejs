<% layout("/layouts/boilerplate") %>
<body >
        <div class="row" >
                <div class="col-5 offset-3">
                         <h3>Listing details</h3>
                         <div class="card  " >
                                <div>
                                <img src="<%=data.image.url %>" class="card-img-top show-image" alt="<%=data.image.filename%>">
                                </div>
                                
                                <div class="card-body">
                                        <h3><%=data.title%></h3>

                                        <p class="card-text"><%= data.description %></p>
                                        <h3 class="last"> &#8377 <%= data.price.toLocaleString("en-EN") %>/per day </h3>
                                        <h6 class="last"> <i class="fa-solid fa-location-dot"></i> <%= data.location%>,<%= data.country%></h6>
                                        <a href="/lists/<%=data._id%>/edit"><button class="btn btn-primary">EDIT</button></a>
                                        <a href="/lists/<%=data._id%>/delete"><button class="btn btn-danger">DELETE</button></a>
                                        <a href="/lists"><button class="btn btn-secondary">BACK</button></a>
                                </div>
                        </div>
                </div>
                <hr>
                <div class="mt-3 mb-3 ">
                        <form action="/lists/<%=data._id%>/reviews" method="post" novalidate class="needs-validation">
                              <h4>Add a reviews</h4>
                              <div class="mt-3 mb-3 col-3">
                                        <label for="rating" class="form-label">Rating</label>
                                        <input type="range" class="form-range " id="rating" name="review[rating]" min="1" max="5" step="1">
                              </div>
                              <div class="mt-3 mb-3">
                                        <label for="comment" class="form-label">Comment</label>
                                        <textarea class="form-control" id="comment" name="review[comment]" cols="30" rows="5" required></textarea>
                                        <div class="invalid-feedback">Please enter some valid comment</div>
                              </div>
                              <button class="btn btn-success mt-2" type="submit">Submit</button>

                        </form>
                </div>
                <div>
                        <p><b><% if (data.reviews.length>0) { %><hr> Reviews</b></p><%}%>
                        
                                
                                        <div class="row">
                                                <% for(review of  data.reviews ){ %>
                                                
                                                        <div class="card col-6 mb-3" style="width: 18rem;">
                                                                <div class="card-body">
                                                                <h5 class="card-title">Card title</h5>
                                                                <h6 class="card-subtitle mb-2 text-body-secondary">
                                                                        <% for(let x=0;x< review.rating ;x++) { %>
                                                                        &#9733; 
                                                                        <%}%><br>
                                                                </h6>
                                                                <p class="card-text"> <%= review.comment %> </p>
                                                                <!-- <a href="#" class="card-link">Card link</a>
                                                                <a href="#" class="card-link">Another link</a> -->
                                                                </div>
                                                                <form class ="mb-2 mt-2"action="/lists/<%=data._id%>/reviews/<%=review._id%>?_method=delete"method="POST">
                                                                <button class="btn btn-dark col-4 btn-sm">delete</button>

                                                                </form>
                                                        </div>
                                                
                                                <% } %>
                                        </div>
                                        
                                        
                             
                        
                        
                       
                </div>
        </div>
</body>
